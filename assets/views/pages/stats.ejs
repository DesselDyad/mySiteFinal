<!DOCTYPE html>
<html>
    <% include ../partials/head %>
<body>
    <% include ../partials/header %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <% if(typeof global.unique_ips != 'undefined') { %>
                    <% if(global.unique_ips.length == 1) { %> 
                        <h1>Stats</h1>
                        <h3>
                            IP's
                        </h3>
                        <ul>
                            <% global.unique_ips.forEach(ip => { %> 
                                <li>
                                    <%= ip %>
                                </li>
                            <% })%>
                        </ul>
                        <h3>
                            Total Page Hit's
                        </h3>
                        <p>
                            <%= global.total_hits %>
                        </p>
                    <% } %>
                <% } else { %>
                    <h1>Stats</h1>
                    <h3>
                        IP's
                    </h3>
                    <ul>
                        <% global[0].unique_ips.forEach(ip => { %> 
                            <li>
                                <%= ip %>
                            </li>
                        <% })%>
                    </ul>
                    <h3>
                        Total Page Hit's
                    </h3>
                    <p>
                        <%= global[0].total_hits %>
                    </p>
                <% } %>
            </div>
        </div>
    <% include ../partials/footer %>
    </div>
</body>

</html>